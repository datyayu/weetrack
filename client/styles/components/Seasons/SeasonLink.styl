.SeasonLink
  height 150px
  width 100%
  margin .5em
  position relative
  box-shadow 0px 0px 5px 0px BLACK

  &:hover
    box-shadow 0px 0px 10px 0px PRIMARY_COLOR

.SeasonLink__image
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  background-repeat no-repeat
  background-position center
  background-size cover


@media screen and (min-width: DESKTOP_QUERY)
  .SeasonLink
    width 150px * (1920 / 400) // 1920*400 -> Image original resolution.

  .SeasonLink__image
    background-size contain
