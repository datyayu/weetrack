.ContentTitle
  background PRIMARY_COLOR
  text-align center

.ContentTitle__text
  color white
  font-size 1.8em
  padding .3em 1em
  margin 0
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;


@media screen and (min-width TABLET_QUERY)
  .ContentTitle
    background none
  .ContentTitle__text
    color DARK_TEXT
    padding .5em 0
    font-style italic
    font-weight normal
