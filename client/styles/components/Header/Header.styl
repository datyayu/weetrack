.Header
  smooth-transition()
  background SECONDARY_COLOR
  box-shadow 1px 0px 10px 0px black

  // This keeps the blocker on full screen when
  // scrolling on mobile
  height 120vh
  overflow hidden

  // Off-canvas positioning.
  position fixed
  top 0
  left -70vw // Should be 65, but this way it keeps the shadow hide as well.
  width 65vw
  z-index 2

  // Display menu.
  &.is-active
    left 0


+at-tablet()
  .Header
    background WHITE
    display flex
    justify-content space-around
    padding .5em 0
    width 100%
    border-bottom 1px solid

    // Reset
    position static
    box-shadow none
    max-width none
    height auto
