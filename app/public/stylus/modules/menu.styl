/* Mobile-first view */
  .Menu
    background $tertiary_color
    border-right 3px solid $tertiary_color
    height 100%
    left -50%
    top 0
    position fixed
    transition all 300ms ease-in-out
    width 50%

  .Menu-item
    border-bottom 1px solid white
    cursor pointer
    height 3em
    text-align center
    
  .Menu-item:hover, 
  .Menu-item.is-active
    background $primary_color
    &:first-child
      .Menu-site-title
        color $tertiary_color 
    
  .Menu-item:first-child
    font-size 1.8em
    height 1.7em
    .Menu-link
      padding 0    
    .Menu-site-title
      color $primary_color

  .Menu-link
    display block
    color white
    user-select none
    padding-top 1em
    width 100%
    height 100%
    
  .Move-right
    .Menu
      left 0



/* Tablet view */
@media screen and (min-width: $query_medium)
  .Menu-item
    font-size 1.8em
    height 2em
    &:first-child
      font-size 2.5em
      height 1.6em
      padding-top .1em
  
  .Menu-link
    padding-top .3em



/* Desktop View*/
@media screen and (min-width: $query_large)
  .Menu
    background $background_color
    border-right none
    display block
    height auto
    padding 0 5%
    top 5em
    left 0
    width 100%
    z-index 2
  
  .Menu-item 
    border-bottom none
    border-top 6px solid transparent
    display inline-flex
    height 1em
    padding-top 0em
    transition all 200ms ease-in-out
    &:first-child
      display none
    &:hover, 
    &.is-active
      background none
      .Menu-link
        color $dark_text
    &.is-active
      background none
      border-top 6px solid $secondary_color
      
    
  .Menu-link
    color $light_text
    font-size .7em
    padding 0 1em
        