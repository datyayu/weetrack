/* Normalize v3.0.1 */
  @import "dependencies/normalize"


/* Box-sizing */
  * 
    box-sizing border-box
    margin 0
    padding 0
    -webkit-tap-highlight-color:  rgba(255, 255, 255, 0); 


/* List */
  li
    list-style none
    padding 0


/* Others */
  a
    text-decoration none
    color $primary_color
    &:hover
      color $tertiary_color

  body
    background $background_color
    overflow-x hidden
    
  button
    background $primary_color
    border 1px solid $primary_color
    color white
    font-weight bold
    &:active, 
    &.is-active
      background $tertiary_color
      border 1px solid $primary_color
    &:focus
      outline 0px 
    &:hover
      border 1px solid $tertiary_color

  figure
    margin 0
    padding 0

  h1
    margin 0
  
  img
    width 100%
    height 100%  
    
