/* Normalize v3.0.1 */
  @import "dependencies/normalize"


/* Box-sizing */
  * 
    box-sizing border-box
    margin 0
    padding 0
    -webkit-tap-highlight-color:  rgba(255, 255, 255, 0); 


/* List */
  li
    list-style none
    padding 0


/* Others */
  a
    text-decoration none

  body
    background $background_color
    overflow-x hidden
    
  h1
    margin 0
    
  figure
    margin 0
    padding 0
